{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@features/*": ["./features/*"],
      "@assets/*": ["./assets/*"],
      "@hooks/*": ["./hooks/*"],
      "@data/*": ["./data/*"],
      "@app/*": ["./app/*"]
    }
  },
  "include": ["vite.config.ts", "tsconfig.json"]
}
